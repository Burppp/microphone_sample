{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C Project",
      "type": "shell",
      "command": "D:/mingw64/bin/gcc.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}.elf"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
} 